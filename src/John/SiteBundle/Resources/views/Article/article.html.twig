<div class="description">
    {% if article.picture %}
        <img src="{{ asset(['uploads/', article.picture] | join | apply_filter('thumbnail_article')) }}"  alt="" class="image"/>
    {% endif %}
    {% if article.chapo is defined %}
        {% if article.chapo is not null or article.chapo is not empty %}
            <strong>{{ article.chapo | raw  }}</strong>
        {% endif %}
    {% endif %}
    <div class="clear"></div>
    {{ article.body | raw }}
</div>