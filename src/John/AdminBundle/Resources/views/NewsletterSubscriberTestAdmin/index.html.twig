{% extends "::baseAdmin.html.twig" %}

{% block body_admin %}
    <div class="clear"></div> <!-- End .clear -->
    <div class="content-box"><!-- Start Content Box -->
        <div class="content-box-header">

            <div class="clear"></div>

        </div> <!-- End .content-box-header -->

        <div class="content-box-content">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="notification success png_bg">
                    <div>{{ flashMessage }}</div>
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="notification error png_bg">
                    <div>{{ flashMessage }}</div>
                </div>
            {% endfor %}
            <table class="records_list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom/Pr√©nom</th>
                        <th>Email</th>
                        <th>Est actif</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.name }}</td>
                            <td>{{ entity.email }}</td>
                            <td>{{entity.isActive ? 'oui':'non'}}</td>
                            <td>
                                <a href="{{ path('newslettersubscribertest_admin_edit', { 'id': entity.id }) }}" title="Edit"><img src="{{ asset('bundles/shakyamouniadmin/images/icons/pencil.png') }}" alt="Edit" /></a>
                                <a href="{{ path('newslettersubscribertest_admin_delete', { 'id': entity.id }) }}" title="Delete" class="action-delete"><img src="{{ asset('bundles/shakyamouniadmin/images/icons/cross.png') }}" alt="Delete" /></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <br/>
            <a class="button" title="Nouveau testeur" href="{{ path('newslettersubscribertest_admin_new')}}">Nouveau testeur</a>
        </div> <!-- End .content-box-content -->
    </div> <!-- End .content-box -->
{% endblock %} 