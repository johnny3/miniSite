{% extends "::baseAdmin.html.twig" %}

{% block body_admin -%}

    <h2>Category list</h2>

    <div class="clear"></div> <!-- End .clear -->
    <div class="content-box"><!-- Start Content Box -->
        <div class="content-box-header">

            <ul class="content-box-tabs">
                <li><a href="#tab1" class="default-tab">Table</a></li> <!-- href must be unique and match the id of target div -->
            </ul>

            <div class="clear"></div>

        </div> <!-- End .content-box-header -->

        <div class="content-box-content">
            <div class="tab-content default-tab" id="tab1">
                <div class="bulk-actions align-left">
                    {#                <p>Page {{pagination.getCurrentPageNumber}}/{{totalPages}} ({{pagination.getTotalItemCount}} entries)</p>#}
                </div>
                <div class="clear"></div>
                <table class="record_properties">
                    <thead>
                        <tr>
                            <th>Catégorie</th>
                            <th>Position</th>
                            <th>Titre</th>
                            <th>Publié</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td colspan="6">
                                {#                            {{ knp_pagination_render(pagination) }}#}
                                <div class="clear"></div>
                            </td>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.category }}</td>
                                <td>{{ entity.position }}</td>
                                <td>{{ entity.title }}</td>
                                <td>{% if entity.isVisible %}OUI{% else %}NON{% endif %}</td>
                                <td>
                                    <a href="{{ path('subcategory_admin_edit', { 'id': entity.id }) }}" title="Edit"><img src="{{ asset('bundles/johnadmin/images/icons/pencil.png') }}" alt="Edit" /></a>
                                    <a href="{{ path('subcategory_admin_delete', { 'id': entity.id }) }}" title="Delete" onclick="return confirm('Are you sure you want to delete the item {{ entity }} ?')" class="action-delete"><img src="{{ asset('bundles/johnadmin/images/icons/cross.png') }}" alt="Delete" /></a> 
                                    <a href="{{ path('article_admin_new', { 'id': entity.id, 'type': 'subcategory' }) }}" title="create" class="action-delete">Créer article</a> 
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div> <!-- End .content-box-content -->
    </div> <!-- End .content-box -->
{% endblock %}