{% extends "::baseAdmin.html.twig" %}

{% block body_admin -%}

    <h2>{{ entity.title }}</h2>

    <div class="clear"></div> <!-- End .clear -->
    <div class="content-box"><!-- Start Content Box -->
        <div class="content-box-header">

            <ul class="content-box-tabs">
                <li><a href="#tab1" class="default-tab">Table</a></li> <!-- href must be unique and match the id of target div -->
            </ul>

            <div class="clear"></div>

        </div> <!-- End .content-box-header -->

        <div class="content-box-content">
            <div class="tab-content default-tab" id="tab1">
                <table class="record_properties">
                    <p><span class="souligne-gras">Catégorie:</span> {{ entity.category }}</p>
                    <p><span class="souligne-gras">Position:</span> {{ entity.position }}</p>
                    <p><span class="souligne-gras">Est publié:</span> {% if entity.isVisible %}OUI{% else %}NON{% endif %}</p>

                    {% include 'JohnSiteBundle:Article:article.html.twig' with {'article' : entity} %}
                    <p>{{ entity.shortText | raw }}</p>
                    
                    <br/>

                    <table class="action-button-table-create-article">
                        <tbody>
                            <tr>
                                <td>
                                    Actions possibles: 
                                    <span class="edit"><a href="{{ path('subcategory_admin_edit', { 'id': entity.id }) }}" title="Edit"><img src="{{ asset('bundles/johnadmin/images/icons/pencil.png') }}" alt="Edit" /></a></span>
                                    <span class="action-delete"><a href="{{ path('subcategory_admin_delete', { 'id': entity.id }) }}" title="Delete" onclick="return confirm('Are you sure you want to delete the item {{ entity }} ?')"><img src="{{ asset('bundles/johnadmin/images/icons/cross.png') }}" alt="Delete" /></a></span>
                                    <span class="action-delete"><a href="{{ path('article_admin_new', { 'id': entity.id, 'type': 'subcategory' }) }}" title="create">Créer article</a></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </table>
            </div>
        </div> <!-- End .content-box-content -->
    </div> <!-- End .content-box -->
{% endblock %}