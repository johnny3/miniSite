<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ render(controller('JohnAdminBundle:InfoAdmin:footerSentence')) }}{% endblock %}</title>
        <meta name="viewport" content="initial-scale = 1.0, maximum-scale = 1.0, user-scalable = no, width = device-width">
        <meta name="description" content="Description">
        <meta name="keywords" content="Keywords">

        {% block stylesheets %}
        <!--[if lt IE 9]><script src="https://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
        <link rel="stylesheet" href="{{ asset('bundles/johnsite/css/style.css') }}" media="screen">
        <!--[if lte IE 7]><link rel="stylesheet" href="style.ie7.css" media="screen" /><![endif]-->
        <link rel="stylesheet" href="{{ asset('bundles/johnsite/css/style.responsive.css') }}" media="all">

        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
        <script src="{{ asset('bundles/johnsite/js/script.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/johnsite/js/script.responsive.js') }}" type="text/javascript"></script>
        {% endblock %}
        <link rel="shortcut icon" type="image/x-icon"href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="main">
            <header class="header">
                <div class="shapes">
                    <div class="object1183928157" data-left="0%"></div>
                    <div class="object1472077567" data-left="98.08%"></div>
                </div>
                <h1 class="headline" data-left="4.78%">
                    <a href="{{ path('homepage') }}">{{ render(controller('JohnAdminBundle:InfoAdmin:title')) }}</a>
                </h1>

                <nav class="nav">
                    <div class="nav-inner">
                        {{ render(controller('JohnSiteBundle:Menu:menu')) }} 
                    </div>
                </nav>
                    
                    
            </header>
         
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

            <footer class="footer">
                <div class="footer-inner">
                    <div style="position:relative;display:inline-block;padding-left:42px;padding-right:42px"><a title="RSS" class="rss-tag-icon" style="position: absolute; bottom: -10px; left: -6px; line-height: 32px;" href="#"></a>
                        <p>{{ render(controller('JohnAdminBundle:InfoAdmin:footerSentence')) }} @2014</p>
                    </div>
                </div>
            </footer>

        </div>

    </body>
</html>
